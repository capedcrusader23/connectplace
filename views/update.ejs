    </div>
</div>






<script>

$(document).ready(function(){


$('#namechange').submit(function(){
    event.preventDefault()
var k=$(this)['0']['0'].value;

    $.ajax({
        url:'/updatename',
        method:'POST',
        contentType:'application/json',
        data:JSON.stringify({name:k}),
        success:function(res)
        {
            $('#na').html(res);
        }
    })
});

$('#countrychange').submit(function(){
        event.preventDefault()
        var k=$(this)['0']['0'].value;

        $.ajax({
            url:'/updatecounty',
